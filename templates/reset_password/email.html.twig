{% apply inky_to_html|inline_css(source('@styles/foundation-emails.css'), source('@styles/email.css')) %}
    <container>
        <row class="header logo-header">
            <columns>
                <a href="{{ url('login') }}">
                    <img src="{{ email.image('@images/email_logo.png') }}"
                         class=""
                         alt="Lions Fitness Club"
                         style="width:60px; height:60px;">
                </a>
            </columns>
            <columns>
                <h1>
                    Lions Fitness Club
                </h1>
            </columns>
        </row>

        <row>
            <columns>
                <spacer size="20"></spacer>
                <h4 class="text-center">
                    Bienvenue dans la famille des Lions Club !
                </h4>
                <spacer size="10"></spacer>
            </columns>
        </row>
        <row>
            <columns>
                <p>
                    Avant d'avoir accés à votre espace vous devez modifier votre mot de passe
                </p>
            </columns>
        </row>
        <row>
            <columns>
                <p>Votre identifiant de connexion : {{ connexionId }}</p>
                <p class="text-center">
                    <button>
                        <a href="{{ url('app_reset_password', {token: resetToken.token}) }}">
                            Je change mon mot de passe
                        </a>
                    </button>
                </p>

                <p>Attention le lien expirera dans :  {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}
                    </p>


            </columns>
        </row>
        <row class="footer">
            <columns>
                <p>Notre équipe d'experts spécialisés en <em>développement de la marque </em> est à votre écoute</p>
            </columns>
        </row>

    </container>
{% endapply %}





