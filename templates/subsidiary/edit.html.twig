{% extends 'base.html.twig' %}

{% block title %}New Partner{% endblock %}


{% block main %}
    {{ include('navigation/_mobil-navigation.html.twig') }}
    {{ include('navigation/_sidebar-menu-desktop.html.twig') }}

    <div class="relative md:ml-60">
    <!-- Header -->
    <div class="bg-orange-500 md:pt-12 pb-32 pt-5  md:pt-12 lg:h-max">
        <div class="md:px-4 md:px-10 mx-auto my-auto w-full">

            {% block mainTop %}
                {% for message in app.flashes('success') %}
                    <div class="bg-blue-100 rounded-lg py-5 px-6 mb-4 text-base text-blue-700 mb-3" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endblock %}
        </div>
    </div>
{% block content %}
    <div class="mx-0 md:px-4 md:px-10 mx-auto w-full">
    <div class="flex flex-wrap -mt-32">
    <div class="w-full md:px-4">
        <div
                class="relative flex flex-col  min-w-0 break-words bg-white w-full mb-6 shadow-lg rounded bg-teal-400"
        >
            <div class="rounded-t mb-0 md:px-4 py-3 bg-zinc-800">

                <div class=" flex flex-col justify-center items-center">

                    <div class=" lg:w-8/12  w-full px-4">
                        <div class="relative flex flex-col min-w-0 break-words bg-white rounded mb-4  shadow-lg">
                            <div class="flex-auto p-4 lg:p-10">
                                {{ form_start(subsidform) }}
                                {{ form_row(subsidform._token) }}
                                {{ include('subsidiary/_form-subsidiary-edit.html.twig') }}
                                <div class="flex justify-center items-center mt-5">
                                    <button type="submit"
                                            class="w-6/12 px-8 py-2 border-2 border-orange-500/50 rounded text-base text-zinc-900 hover:border-teal-500  capitalize"
                                    >
                                        Enregistrer
                                    </button>
                                </div>
                                {{ form_end(subsidform, {render_rest: false}) }}
                            </div>
                        </div>
                    </div>
                    <div class="flex justify-start items-center w-full ">
                        <i class="fa fa-arrow-circle-left mr-3 text-zinc-900 " style="color: #04D6C8;"></i>
                        <a href="{{ path('partner') }}" class="text-white">
                            retour Ã  la liste
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}

