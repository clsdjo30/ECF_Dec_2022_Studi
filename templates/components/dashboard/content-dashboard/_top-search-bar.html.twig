<div class="w-full mb-12 lg:px-4 ">
    <div
            class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-2xl  rounded bg-white"
    >
        <div class="rounded-t mb-0 px-4 py-3 bg-transparent">
            <div class="relative w-full max-w-full flex-1">
                {{ form_start(form, {attr: { class: 'js-filter-form'}} ) }}
                <!--SEARCH BAR-->
                <div class=" flex items-center lg:w-6/12 h-12 rounded-lg shadow-lg bg-white w-full">
                    <div class="ml-5 w-10/12">
                        {{ form_widget(form.q, {
                            'attr': {
                                'class': 'relative flex w-full lg:w-8/12 h-12  bg-transparent overflow-hidden text-gray-300 focus:border-none focus:outline-none',
                                'placeholder': 'Saisissez votre recherche'
                            }
                        }) }}
                    </div>
                    <button class="grid grid-cols-2 place-items-center h-full w-26 text-gray-300 mr-5" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                        Filtrer
                    </button>

                </div>
                {{ form_end (form) }}
                <!--TOGGLE ACTIVE CHOICE-->
                <div class="flex justify-between items-center  mt-4 w-full lg:w-10/12">
                    <div class=" lg:w-3/12 lg:mb-0">
                        <div class="js-filter-sorting px-4 lg:px-8 py-2 border-2 border-orange-500/50 rounded text-xs lg:text-base text-zinc-900 hover:border-teal-500  capitalize">
                            {% include 'partner/_sorting.html.twig' %}
                        </div>
                    </div>
                    <div class="">
                        <button>
                        <a
                                href="{{ path('partner_new') }}"
                                class="px-4 lg:px-8 py-2 border-2 border-orange-500/50 rounded text-xs lg:text-base text-zinc-900 hover:border-teal-500  capitalize ">
                            ajouter un partenaire
                        </a>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
