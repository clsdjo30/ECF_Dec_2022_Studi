{% for partner in partners %}
    <div class="xxl:w-2/12  xl:w-4/12 lg:w-6/12  w-full px-4">
        <div class="relative flex flex-col min-w-0 break-words bg-white rounded mb-6  shadow-lg">
            <div class="flex-auto p-4">
                <div class="flex flex-wrap">
                    <div class="relative w-full pr-4 max-w-full flex-grow flex-1 mb-3">
                        <h3 class="text-zinc-900 uppercase font-bold text-lg">
                            {{ partner.name }}
                        </h3>
                        <span class="font-extra-light  lowercase text-base">
                        <i class="fa fa-user mr-3" style="color: #ED8428;"></i>
                        <span class="text-teal-600 capitalize">{{ partner.user.firstname }} {{ partner.user.lastName }}</span>
                    </span>
                    </div>
                    <div class="relative w-auto pl-4 flex-initial">
                        <div class="text-white text-center inline-flex items-center justify-center w-12 h-12 shadow-lg rounded-full">
                            {# logo url logo de l'enseigne #}
                            <img
                                    src="{{ asset('img/dashboard_logo.png') }}"
                                    alt="Logo de Lions Fitness Club">

                        </div>
                    </div>
                </div>
                <div class="font-extra-light  lowercase text-sm text-zinc-900">
                    <i class="fa fa-envelope-open-text mr-3 text-zinc-900"></i>
                    <span>{{ partner.user.email }}</span>
                </div>
                <div class="font-extra-light  lowercase text-sm text-zinc-900 mb-3">
                    <i class="fa fa-phone-square mr-3"></i>
                    <span>{{ partner.phoneNumber }}</span>
                </div>
                <div class="font-extra-light  lowercase text-sm text-zinc-900 mb-3">
                    <i class="fa fa-globe mr-3"></i>


                    {% set subsidiaryUrl = 0 %}
                    {% for subsidiary in partner.subsidiaries %}
                        {% set subsidiaryUrl = subsidiaryUrl + 1 %}
                    {% endfor %}

                    {% if subsidiaryUrl < 2 %}
                        <span>Cette franchise possède {{ subsidiaryUrl }} site web </span>
                    {% else %}
                        <span>Cette franchise possède {{ subsidiaryUrl }} sites web</span>
                    {% endif %}

                </div>

                <div class="font-extra-light text-base text-zinc-900 mb-3">
                    <i class="fa fa-building mr-3" style="color: #ED8428;"></i>

                    <span>Cette franchise posséde {{ pluralize(partner.subsidiaries | length, 'salle', 'salles') }}</span>

                </div>

                <!--Start of Permission Modal-->
                <!-- Button trigger modal -->
                <div class="flex items-center font-extra-light text-base text-zinc-900 mb-3">
                    <i class="fa fa-file-invoice mr-3" style="color: #04D6C8;"></i>
                    <button type="button"
                            class=""
                            data-bs-toggle="modal"
                            data-bs-target="#staticBackdrop">
                        Afficher les permissions
                    </button>
                </div>

                    {% for permission in partner.globalPermissions %}
                        {% if permission.isActive == true %}
                <div class="font-extra-light  lowercase text-lg text-zinc-900 mb-3">
                           <ul>
                               <li>
                                   <i class="fa fa-check mr-3 text-zinc-900" style="color:#38B11F" ></i>
                                   <span>{{ permission.permission.name }}</span>
                               </li>
                           </ul>
                </div>
                        {% endif %}
                    {% endfor %}
                <!--End of Permission Modal-->

                <!-Affichage actif/inactif--->
                <div class="text-base h-12 flex justify-between items-center px-2 ">
                    <div>
                        {% if partner.isActive == true %}
                            <span data-choose-partner-target="active"
                                  class="px-5 py-1 rounded-md shadow-lg bg-teal-200 text-zinc-900 font-bold ">
                                    Actif
                                </span>
                        {% else %}
                            <span
                                    class="px-5 py-1 rounded-full shadow-lg bg-orange-300 text-white font-bold ">
                                    Inactif
                                </span>
                        {% endif %}
                    </div>
                    <div>
                        <a
                                href="{{ path('partner_show', {'id': 'partnerid'}) }}"
                                class="border-2 border-orange-500/50 rounded px-5 py-1 text-xs text-zinc-900 hover:border-teal-500 hover:text-sm">
                            {% if partner.subsidiaries.count == 1 %}
                                Voir la salle
                            {% else %}
                                Voir les salles
                            {% endif %}
                        </a>

                    </div>
                </div>


            </div>
        </div>
    </div>
{% endfor %}