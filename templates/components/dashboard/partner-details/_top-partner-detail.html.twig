<div class=" w-full px-4">
    <div class="relative flex flex-col min-w-0 break-words bg-white rounded mb-6 shadow-lg">
        <div class="flex flex-col justify-center items-center p-4">
            {% if is_granted('ROLE_TECH') %}
                <div class="flex justify-start items-center w-full ">
                    <i class="fa fa-arrow-circle-left mr-3 text-zinc-900 " style="color: #04D6C8;"></i>
                    <a href="{{ path('partner') }}">
                        retour à la liste
                    </a>
                </div>
            {% endif %}
            {% if is_granted('ROLE_PARTNER') %}
                <div class="flex justify-start items-center w-full ">
                    <i class="fa fa-arrow-circle-right mr-3 text-zinc-900 " style="color: #04D6C8;"></i>
                    <a href="{{ path('logout') }}" class="text-zinc-900">
                        Se Déconnecter
                    </a>
                </div>
            {% endif %}
            <h1 class="text-zinc-900 uppercase font-bold text-lg text-center">
                Informations sur le franchisé
            </h1>
            <!--START OF PARTNER DETAIL-->
            <div class="shadow-lg flex flex-col justify-center rounded m-5  p-5 w-10/12">
                <div class="flex flex-wrap">
                    <div class="relative w-full pr-4 max-w-full flex-grow flex-1 mb-3">
                        <h3 class="text-zinc-900 uppercase font-bold text-lg">
                            <span class="capitalize text-base text-underline"> Société </span>: {{ partner.name }}
                        </h3>
                        <span class="font-extra-light  lowercase text-base">
                                <i class="fa fa-user mr-3" style="color: #ED8428;"></i>
                                <span class="text-teal-600 capitalize">{{ partner.user.firstName }} {{ partner.user.lastName }} </span>
                        </span>
                        <div class="font-extra-light  lowercase text-sm text-zinc-900">
                            <i class="fa fa-envelope-open-text mr-3 text-zinc-900"></i>
                            <span>{{ partner.createdAt | date('d-m-Y') }}</span>
                        </div>
                    </div>
                    <div class="relative w-auto pl-4 flex-initial">
                        <div class="text-white text-center inline-flex items-center justify-center w-12 lg:w-24 h-12 lg:h-24 shadow-lg rounded-full">
                            <img
                                    src="{{ asset('img/dashboard_logo.png') }}"
                                    alt="Logo de Lions Fitness Club">
                        </div>
                    </div>
                </div>
                <div class="font-extra-light  lowercase text-sm text-zinc-900">
                    <i class="fa fa-envelope-open-text mr-3 text-zinc-900"></i>
                    <span>{{ partner.user.email }}</span>
                </div>
                <div class="font-extra-light  lowercase text-sm text-zinc-900 mb-3">
                    <i class="fa fa-phone-square mr-3"></i>
                    <span>{{ partner.phoneNumber }}</span>
                </div>
                <div class="font-extra-light text-base text-zinc-900 mb-3">
                    <i class="fa fa-building mr-3" style="color: #ED8428;"></i>
                    <span>Ce franchise posséde {{ pluralize(partner.subsidiaries | length, 'salle', 'salles') }}.</span>
                    <span class="italic text-xs"> Voir ci-dessous</span>
                </div>
                <!-Affichage actif/inactif--->
                <div class="text-base h-16 flex justify-between items-center px-2 ">

                    <div>
                        {% if partner.isActive == true %}
                            <span data-choose-partner-target="active"
                                  class="px-5 py-1 rounded-md shadow-lg bg-teal-200 text-zinc-900 font-bold ">
                                    Actif
                                </span>
                        {% else %}
                            <span
                                    class="px-5 py-1 rounded-full shadow-lg bg-orange-300 text-white font-bold ">
                                    Inactif
                                </span>
                        {% endif %}
                    </div>
                    {% if is_granted('ROLE_TECH') %}
                        <div class="w-5/12 flex justify-between items-center">

                            <button class="w-5/12 border-2 border-orange-400 rounded px-5 py-1 text-base text-zinc-900 hover:border-teal-200">
                                <a
                                        href="{{ path('partner_new_subsidiary', {'id': partner.id}) }}"

                                >
                                    Ajouter une Salle

                                </a>
                            </button>

                            <button class="w-5/12 border-2 border-orange-400 rounded px-5 py-1 text-base text-zinc-900 hover:border-teal-200">
                                <a
                                        href="{{ path('partner_edit', {'id': partner.id}) }}"

                                >
                                    Modifier le partenaire

                                </a>
                            </button>

                        </div>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>
</div>
