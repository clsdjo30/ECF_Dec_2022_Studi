    <section class="h-full gradient-form md:h-screen overflow-hidden bg-no-repeat bg-cover"
             style="
                     background-image: url('{{ asset('img/running-1.jpg') }}');
                     height: 100vh;
                     ">
        <div class="container py-12 px-6 h-full">
            <div class="flex justify-center items-center h-full text-gray-800">
                <div class="xl:w-10/12 xl:items-center">
                    <div class="block bg-white shadow-lg rounded-lg">
                        <div class="lg:flex lg:flex-wrap g-0">
                            <div class="lg:w-6/12 px-4 md:px-0">
                                <div class="md:p-12 md:mx-6">
                                    <div class="text-center">
                                        <div class="flex justify-center mr-10">
                                            <img class="ml-14" src="{{ asset('img/dashboard_logo.png') }}"
                                                 alt="logo de Lions Fitness Club"
                                                 style="width: 50%;">

                                        </div>
                                        <h2 class="font-title font-bold text-5xl text-orange-400 mb-4 -mt-10">Lions Fitness Club</h2>
                                    </div>
                                    <form method="post">
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}

                                        {% if app.user %}
                                            <div class="mb-3">
                                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}">Déconnexion</a>
                                            </div>
                                        {% endif %}
                                        <p class="mb-4">S'identifier</p>
                                        <div class="mb-4">
                                            <label for="inputEmail" class="hidden">Email:</label>
                                            <input
                                                    type="email"
                                                    value="{{ last_username }}"
                                                    name="email"
                                                    id="inputEmail"
                                                    class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                                                    autocomplete="email"
                                                    required
                                                    autofocus
                                                    placeholder="Email"
                                            />
                                        </div>
                                        <div class="mb-4">
                                            <label for="inputPassword" class="hidden">Mot de passe</label>
                                            <input
                                                    type="password"
                                                    name="password"
                                                    id="inputPassword"
                                                    autocomplete="current-password"
                                                    class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                                                    required
                                                    placeholder="Mot de passe"

                                            />
                                            <input type="hidden" name="_csrf_token"
                                                   value="{{ csrf_token('authenticate') }}"
                                            >
                                        </div>
                                        <div class="text-center pt-1 mb-12 pb-1">
                                            <button
                                                    class="inline-block px-6 py-2.5 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:shadow-lg focus:outline-none focus:ring-0 active:shadow-lg transition duration-150 ease-in-out w-full mb-3"
                                                    type="submit"
                                                    data-mdb-ripple="true"
                                                    data-mdb-ripple-color="light"
                                                    style="
                        background: linear-gradient(
                          to right,
                         #ee7724,
                         #ea8419,
                         #e5910d,
                         #de9e04,
                         #d6aa04
                        );
                      "
                                            >
                                                Se Connecter
                                            </button>
                                            <a class="text-gray-500" href="{{ path('forgot_password_request') }}">Mot de passe oublié?</a>
                                        </div>

                                    </form>
                                </div>
                            </div>
                            <div
                                    class="lg:w-6/12 flex items-center lg:rounded-r-lg rounded-b-lg lg:rounded-bl-none"
                                    style="
                background: linear-gradient(
                to right,
                #ee7724,
                #ea8419,
                #e5910d,
                #de9e04,
                #d6aa04);
              "
                            >
                                <div class="text-white px-4 py-6 md:p-12 md:mx-6">
                                    <h4 class="text-xl font-semibold mb-6">Parce que nous sommes plus qu'une salle de sport</h4>
                                    <p class="text-sm">
                                        Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                                        tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
                                        quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                                        consequat.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
