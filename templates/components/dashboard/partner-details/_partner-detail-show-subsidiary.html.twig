{% for subsidiary in partner.subsidiaries %}
    <div class="w-full mx-auto ">
        <div class="relative flex flex-col break-words bg-white rounded mb-6  shadow-lg">
            <div class="flex-auto p-12">
                <div class="flex flex-wrap">
                    <div class="relative w-full pr-4 max-w-full flex-grow flex-1">
                        <h3 class="text-zinc-900 uppercase font-bold text-xl">
                            {{ subsidiary.name }}
                        </h3>
                        <div class="font-extra-light  lowercase text-base text-zinc-900">
                        <span class="font-extra-light  lowercase text-lg">
                                <i class="fa fa-location-arrow mr-3" style="color: #ED8428;"></i>
                                <span class="text-teal-600 capitalize">{{ subsidiary.address }} - {{ subsidiary.postalCode }} - {{ subsidiary.city }}</span> <br/>
                            </span>
                            <i class="fa fa-calendar mr-3 text-zinc-900"></i>
                            <span>Date de création: {{ subsidiary.createdAt | date('d-m-Y') }}</span>
                        </div>
                    </div>
                    <div class="relative w-auto pl-4 flex-initial">
                        <img
                                src="/uploads/logos/{{ subsidiary.logoUrl }}"
                                class="text-white text-center inline-flex items-center justify-center w-12 lg:w-36 h-12 lg:h-36 shadow-xl rounded-full"
                                alt="Logo de Lions Fitness Club">
                        <div class="flex justify-center align-center mt-4 w-full">
                            {% if partner.isActive == true %}
                                <span data-choose-partner-target="active"
                                      class="px-5 py-1 rounded-md shadow-lg bg-teal-200 text-zinc-900 font-bold ">
                                    Actif
                                </span>
                            {% else %}
                                <span
                                        class="px-5 py-1 rounded-full shadow-lg bg-orange-300 text-white font-bold ">
                                    Inactif
                                </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class=" font-extra-light  lowercase text-lg text-zinc-900 -mt-24">
                        <span class="font-extra-light  lowercase text-xl        ">
                                <i class="fa fa-user mr-3" style="color: #ED8428;"></i>
                                <span class="text-teal-600 capitalize">{{ subsidiary.user.firstname }} {{ subsidiary.user.lastname }} </span>
                            </span>

                </div>
                <div class="font-extra-light  lowercase text-lg text-zinc-900">
                    <i class="fa fa-envelope-open-text mr-3 text-zinc-900"></i>
                    <span>{{ subsidiary.user.email }}</span>
                </div>
                <div class="font-extra-light  lowercase text-lg text-zinc-900 mb-3">
                    <i class="fa fa-phone-square mr-3"></i>
                    <span>{{ subsidiary.phoneNumber }}</span>
                </div>
                <div class="font-extra-light  lowercase text-lg text-zinc-900">
                    <i class="fa fa-globe mr-3 text-zinc-900"></i>
                    <span>{{ subsidiary.url }}</span>
                </div>
                <div class="font-extra-light text-lg text-zinc-900 mb-3">
                    <i class="fa fa-building mr-3" style="color: #ED8428;"></i>

                    <span>{{ subsidiary.description | u.truncate(100, '....',  true) }}</span>

                </div>

                <div class="w-full flex flex-col flex-grow align-center mt-4 w-full ">
                    <div class="flex flex-col justify-start items-center py-8">
                        <h5 class="text-center text-lg font-semibold mb-3">Options déja activé pour cette
                            salle </h5>
                        {% for permission in subsidiary.partner.globalPermissions %}
                            <div class="font-extra-light  lowercase text-lg text-zinc-900 mb-3">
                                {% if permission.isIsActive == true %}
                                    <i class="fa fa-check mr-3 text-zinc-900" style="color:#38B11F"></i>
                                    <span>{{ permission.permission.name }}</span>

                                {% endif %}
                            </div>
                        {% endfor %}

                        <div class="flex justify-end">
                            {% if is_granted('ROLE_TECH') %}
                                <a
                                        href="{{ path('subsidiary_edit', {'id' : subsidiary.id}) }}"
                                        class="border-2 border-orange-200 rounded px-5 py-1 text-base text-zinc-900 hover:border-teal-200">
                                    Modifier la salle
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>


            </div>


        </div>
    </div>
{% endfor %}
