{% for message in app.flashes('success') %}
    <div class="success bg-blue-100 rounded-lg py-5 px-6 mb-4 text-base text-blue-700 mb-3 w--6/12 flex justify-center"
         role="alert"
         id="notyf-message"
        >
        {{ message }}
    </div>
{% endfor %}

