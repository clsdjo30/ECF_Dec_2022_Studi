{% extends 'base.html.twig' %}

{% block title %}
    Lions Fitness Club -
{% endblock %}

{% block main %}
    {{ include('components/dashboard/navigation/_mobil-navigation.html.twig') }}
    {{ include('components/dashboard/navigation/_sidebar-menu-desktop.html.twig') }}

    <div class="relative md:ml-60 bg-blueGray-50">
        <!-- Header -->
        <div class="bg-orange-500 md:pt-12 pb-32 pt-12 lg:h-max">
            <div class="px-4 md:px-10 mx-auto my-auto w-full">

                {% block mainTop %}
                    {{ include('components/dashboard/partner-details/_top-partner-detail.html.twig') }}
                {% endblock %}
            </div>
        </div>
        {% block content %}

            <div class="px-4 md:px-10 mx-auto w-full px-4">
                <div class="flex flex-col justify-center items-center -mt-32 px-4">
                    {{ include('components/dashboard/partner-details/_partner-details-show-permissions.html.twig') }}
