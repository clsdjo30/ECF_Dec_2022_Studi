<div class="w-full mb-12 px-4">
    <div
            class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-2xl  rounded bg-white"
    >
        <div class="rounded-t mb-0 px-4 py-3 bg-transparent">

                <div class="relative w-full max-w-full flex-grow flex-1">
                    <!--SEARCH BAR-->

                        <div class="relative flex w-full lg:w-8/12 h-12 rounded-lg shadow-lg bg-white overflow-hidden w-10/12">
                            <div class="grid place-items-center h-full w-12 text-gray-300">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                            </div>

                            <label for="search"></label>
                            <input
                                    class="h-full w-full outline-none text-sm text-gray-700 pr-2"
                                    type="text"
                                    id="search"
                                    placeholder="Saisissez votre recherche.." />
                        </div>
                        <!--TOGGLE ACTIVE CHOICE-->
                        <div class="flex justify-between align-center mt-4 w-full">
                            <div>
                                <button
                                        class="px-8 py-2 rounded-md shadow-lg bg-teal-400 peer-checked:dark:bg-white mr-10"
                                        data-action="choose-partner#selectActivePartner"
                                >
                                    Actif
                                </button>

                                <button
                                        class="px-8 py-2 rounded-md shadow-lg bg-orange-400 peer-checked:dark:bg-teal-400"
                                        data-action="choose-partner#selectInactivePartner"
                                >
                                    Inactif
                                </button>
                            </div>
                            <button>
                                <a
                                        href="{{ path('partner_new') }}"
                                        class="px-8 py-2 border-2 border-orange-500/50 rounded text-xs text-zinc-900 hover:border-teal-500  capitalize ">
                                    ajouter un partenaire
                                </a>
                            </button>

                        </div>



                </div>

        </div>

    </div>
